  },
  "scripts": {
    "start:dev": "nodemon ./src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ./src",
    "lint": "eslint ./src",
    "sanity-check": "yarn format:check && yarn lint",
